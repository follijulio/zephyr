generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  password String
  notes    Note[]
}

model Note {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  note    String
  title   String
  actived Boolean
  userId  String  @db.ObjectId
  user    User    @relation(fields: [userId], references: [id])

  @@map("Note")
}
